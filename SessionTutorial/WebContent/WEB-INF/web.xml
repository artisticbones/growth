    <url-pattern>/processStep1</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ProcessStep2Servlet</servlet-name>
    <servlet-class>cn.swu.edu.javaweb.ProcessStep2Servlet</servlet-class>
  </servlet>
