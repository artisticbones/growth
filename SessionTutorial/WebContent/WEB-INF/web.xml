    <servlet-name>ProcessStep2Servlet</servlet-name>
    <url-pattern>/processStep2</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>tokenServlet</servlet-name>
    <servlet-class>cn.swu.edu.javaweb.TokenServlet</servlet-class>
  </servlet>
